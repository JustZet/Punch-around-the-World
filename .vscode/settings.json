{
    "[lua]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua",
        "editor.formatOnSave": true,
        "lua.diagnostics.disable": [
            "unused-local",
            "unused-function"
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[luau]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua",
        "editor.formatOnSave": true,
        "lua.diagnostics.disable": [
            "unused-local",
            "unused-function"
        ]
    },

    "workbench.editor.customLabels.patterns": {
        "**/init.lua": "${dirname} (${filename}.${extname})",
        "**/init.luau": "${dirname} (${filename}.${extname})"
    },
    "editor.semanticHighlighting.enabled": true,

    "robloxLsp.misc.serverPort": 6000,

    "luau-lsp.plugin.port":8000,
    "luau-lsp.plugin.enabled": true,
    "luau-lsp.types.strict": true,
    "luau-lsp.server.enabled": true,
    "luau-lsp.server.autoStart": true,
    "luau-lsp.sourcemap.enabled": true,
    "luau-lsp.sourcemap.rojo": true,
    "luau-lsp.platform.type": "roblox",
    "luau-lsp.completion.imports.enabled": true,
    "luau-lsp.completion.autocompleteEnd": true,
